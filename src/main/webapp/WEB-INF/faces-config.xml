<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <lifecycle>
        <phase-listener>
            org.springframework.web.jsf.DelegatingPhaseListenerMulticaster</phase-listener>
    </lifecycle>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        
        <navigation-case>
            <from-outcome>listagem_turmas</from-outcome>
            <to-view-id>/app/views/turmas/listagem_turmas.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>criar_turma</from-outcome>
            <to-view-id>/app/views/turmas/criar_turma.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>listagem_membros</from-outcome>
            <to-view-id>/app/views/membros/listagem_membros.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>incluir_membro</from-outcome>
            <to-view-id>/app/views/membros/incluir_membro.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>detalhar_turma</from-outcome>
            <to-view-id>/app/views/turmas/detalhar_turma.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>registrar_presenca</from-outcome>
            <to-view-id>/app/views/turmas/registrar_presenca.xhtml</to-view-id>
            <redirect/>
        </navigation-case>


    </navigation-rule>

</faces-config>